<div class="contact">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <div class="titlepage">
                    <h2>Contactos</h2>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-6">
                <!-- Formulário com Tag Helpers do ASP.NET -->
                <form id="request" class="main_form" asp-controller="Contactos" asp-action="Enviar" method="post">
                    <div class="row">
                        <div class="col-md-12">
                            <input class="contactus" placeholder="Nome" type="text" name="Nome" required />
                        </div>
                        <div class="col-md-12">
                            <input class="contactus" placeholder="Email" type="email" name="Email" required />
                        </div>
                        <div class="col-md-12">
                            <input class="contactus" placeholder="Número de telefone" type="tel" name="Telefone" />
                        </div>
                        <div class="col-md-12">
                            <textarea class="textarea" placeholder="Mensagem" name="Mensagem" rows="5" required>Mensagem</textarea>
                        </div>
                        <div class="col-md-12">
                            <button type="submit" class="send_btn">Enviar</button>
                        </div>
                    </div>
                </form>
            </div>
            <div class="col-md-6">
                <div class="map_main">
                    <div class="map-responsive">
                        <!-- Mapa atualizado (removi chave API pública) -->
